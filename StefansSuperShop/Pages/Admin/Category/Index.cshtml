@page
@model StefansSuperShop.Pages.Admin.Category.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h2>Category</h2>

    <p class="mb-4">
        <a asp-page="Create">Create New</a>
    </p>

    <div clas="container">
        <div class="row">
            <div class="col-sm-12 col-md-10">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Image URL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageUrl)
                                </td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.CategoryId">Edit</a> |
                                    <a asp-page="./Details" asp-route-id="@item.CategoryId">Details</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.CategoryId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div>
                <p class="mt-5">
                    Category images:
                </p>
                @foreach (var item in Model.Categories)
                {
                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="img-thumbnail" alt="@Html.DisplayFor(modelItem => item.CategoryName)" style="width: 50px; height: 50px;" />
                }
                </div>

            </div>
        </div>
    </div>
</div>