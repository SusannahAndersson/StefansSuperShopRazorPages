@page
@model StefansSuperShop.Pages.Admin.Category.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <h2>Delete Category</h2>

    <hr />
    <h4>Are you sure you want to delete this?</h4>
    <dl class="dl-horizontal">
        <dt>
            Category Name:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Categories.CategoryName)
        </dd>
        <dt>
            Description:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Categories.Description)
        </dd>
        <dt>
            Image URL:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Categories.ImageUrl)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Categories.CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-primary">Back</a>
    </form>
</div>
